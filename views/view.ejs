<!DOCTYPE html>
<html lang="en">

<head>
    <title>PR-4</title>
</head>
<style>


    img{
        background-size: cover;
        height: 80px;
        width: 80px;
        border-radius: 50%;
    }
</style>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">

<body class="container">

    <table class="table table-hover" border="2">
        <h2>Records</h2>
        <thead>
    
            <th>Name</th>
            <th>profile</th>
            <th>Email</th>
            <th>Password</th>
            <th>Gender</th>
            <th>Hobby</th>
            <th>City</th>
            <th>Action</th>
    
        </thead>
        <% for(let i in allrecord) { %>
            <tr>
                <td><%= allrecord[i].name %></td>
                <td>
                    <img src="<%= allrecord[i].avatar %>"/>
                </td>
                <td><%= allrecord[i].email %></td>
                <td><%= allrecord[i].password %></td>
                <td><%= allrecord[i].gender %></td>
                <td><%= allrecord[i].hobby %></td>
                <td><%= allrecord[i].city %></td>
              
                <td>    
                    <a href="/deletedata/<%= allrecord[i].id %>">Delete</a> ||
                    <a href="/editdata/<%= allrecord[i].id %>">Edit</a>
                </td>
            </tr>
        <% } %>
    </table>
    <h4><a href="/">Add Record </a></h4>



</body>

</html>